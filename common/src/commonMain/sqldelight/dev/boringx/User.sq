CREATE TABLE IF NOT EXISTS User (
  id            INTEGER PRIMARY KEY,
  user_type_id  INTEGER NOT NULL,
  name          TEXT NOT NULL,
  email         TEXT NOT NULL UNIQUE,

  FOREIGN KEY(user_type_id) REFERENCES UserType(id)
);

selectAll:
SELECT * FROM User;

selectAllById:
SELECT * FROM User
WHERE id = ?;

selectAllByEmail:
SELECT * FROM User
WHERE email = ?;

insert:
INSERT INTO User(user_type_id, name, email)
VALUES(?, ?, ?);

lastInsertRowId:
SELECT last_insert_rowid();
